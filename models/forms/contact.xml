<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="name"
				type="text"
				label="Naam"
				size="40"
				class="inputbox"
				default=""
				/>
                <field
				name="company_id"
				type="sql"
				label="Selecteer bedrijf"
				class=""
				default=""
                                query="SELECT id, name FROM #__company"
                                key_field="id"
                                value_field="name"
				/>
                <field
				name="email"
				type="email"
				label="Email"
				size="40"
				class="inputbox"
				default=""
				/>
                <field
				name="phone"
				type="text"
				label="Telefoonnummer"
				size="40"
				class="inputbox"
				default=""
				/>
                <field
				name="zip_code"
				type="text"
				label="Postcode"
				size="40"
				class="inputbox"
				default=""
				/>
            <field
				name="address"
				type="text"
				label="Adres"
				size="40"
				class="inputbox"
				default=""
				/>
                
	</fieldset>
</form>